<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:MyShift.Resources.Languages"
             xmlns:services="clr-namespace:MyShift.Services"
             x:Class="MyShift.Pages.TeamViewPage"
             Title="{x:Static lang:AppStrings.TeamView}">
    
    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <DatePicker x:Name="DateView" Grid.Row="0" HorizontalOptions="Center" Format="dd/MM/yyyy" DateSelected="OnDateViewDateSelected" />
        <HorizontalStackLayout Grid.Row="1" Padding="10" Spacing="10" HorizontalOptions="Center">
            <Button x:Name="YesterdayButton" Text="â—€" Clicked="OnYesterdayButtonClicked"/>
            <Button x:Name="HomeButton" Text="ðŸ”„" Clicked="OnHomeButtonClicked"/>
            <Button x:Name="TomorrowButton"  Text="â–¶" Clicked="OnTomorrowButtonClicked" />
        </HorizontalStackLayout>

        <VerticalStackLayout Grid.Row="2" VerticalOptions="Center">
            <Grid RowDefinitions="*, *, *, *, *" ColumnDefinitions="*, *" HeightRequest="200">
                <Label Grid.Row="0" Text="{x:Static lang:AppStrings.MorningShift}" HorizontalOptions="End"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding MorningShift}" HorizontalOptions="Start"/>
                <Label Grid.Row="1" Text="{x:Static lang:AppStrings.AfternoonShift}" HorizontalOptions="End"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding AfternoonShift}" HorizontalOptions="Start"/>
                <Label Grid.Row="2" Text="{x:Static lang:AppStrings.NightShift}" HorizontalOptions="End"/>
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding NightShift}" HorizontalOptions="Start"/>
                <Label Grid.Row="3" Text="{x:Static lang:AppStrings.DayOff}" HorizontalOptions="End"/>
                <Label Grid.Row="3" Grid.Column="1" Text="{Binding DayOff}" HorizontalOptions="Start"/>
                <Label Grid.Row="4" Text="{x:Static lang:AppStrings.DayOff}" HorizontalOptions="End"/>
                <Label Grid.Row="4" Grid.Column="1" Text="{Binding DayOffOT}" HorizontalOptions="Start"/>
            </Grid>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3" Padding="10">
            <Label Text="{x:Static lang:AppStrings.Notes}"/>
            <Editor/>
        </VerticalStackLayout>
        
    </Grid>
</ContentPage>