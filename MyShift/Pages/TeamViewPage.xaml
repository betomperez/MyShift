<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:MyShift.Resources.Languages"
             xmlns:services="clr-namespace:MyShift.Services"
             x:Class="MyShift.Pages.TeamViewPage"
             Title="{x:Static lang:AppStrings.TeamView}">
    
    <Grid RowDefinitions="Auto, Auto, *">
        <Frame Grid.Row="0">
            <VerticalStackLayout>
                <DatePicker FontSize="Medium" x:Name="DateView" HorizontalOptions="Center" Format="dd/MM/yyyy" DateSelected="OnDateViewDateSelected" />
                <Label Padding="0,5,0,0" FontSize="Medium" HorizontalOptions="Center" Text="{Binding Source={Reference DateView}, Path=Date, StringFormat='{0:dddd}'}"/>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="YesterdayButton" Text="â—€" Clicked="OnYesterdayButtonClicked"/>
                    <Button x:Name="HomeButton" Text="ðŸ”„" Clicked="OnHomeButtonClicked"/>
                    <Button x:Name="TomorrowButton"  Text="â–¶" Clicked="OnTomorrowButtonClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Center">
                <Grid RowDefinitions="*, *, *, *, *" ColumnDefinitions="*, *" HeightRequest="200">
                    <Label Grid.Row="0" Text="{x:Static lang:AppStrings.MorningShift}" HorizontalOptions="End" Margin="0,0,10,0"/>
                    <Label Grid.Row="1" Text="{x:Static lang:AppStrings.AfternoonShift}" HorizontalOptions="End" Margin="0,0,10,0"/>
                    <Label Grid.Row="2" Text="{x:Static lang:AppStrings.NightShift}" HorizontalOptions="End" Margin="0,0,10,0"/>
                    <Label Grid.Row="3" Text="{x:Static lang:AppStrings.DayOff}" HorizontalOptions="End" Margin="0,0,10,0"/>
                    <Label Grid.Row="4" Text="{x:Static lang:AppStrings.DayOffOT}" HorizontalOptions="End" Margin="0,0,10,0"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding MorningShift}" HorizontalOptions="Start" Margin="0,0,0,0"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding AfternoonShift}" HorizontalOptions="Start" Margin="0,0,0,0"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding NightShift}" HorizontalOptions="Start" Margin="0,0,0,0"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding DayOff}" HorizontalOptions="Start" Margin="0,0,0,0"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding DayOffOT}" HorizontalOptions="Start" Margin="0,0,0,0"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="2">
            <VerticalStackLayout Padding="10">
                <Label Text="{x:Static lang:AppStrings.Notes}"/>
                <Editor x:Name="EditorNotes" TextChanged="OnEditorNotesTextChanged" VerticalOptions="End" HeightRequest="{OnPlatform Android=200}"/>
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>